<div class="margin container">
    <form class="col g-3" action="/api/sessions/login" method="post" enctype="application/x-www-form-urlencoded">
        <div class="col-md-4">
            <label for="_email" class="form-label">Email</label>
            <input type="email" class="form-control" id="_email" placeholder="nombre@ejemplo.com" name="email">
        </div>
        <div class="col-md-4">
            <label for="_pass" class="form-label">Contraseña</label>
            <input type="password" id="_pass" class="form-control" aria-describedby="passwordHelpBlock" name="password">
        </div>
        <div class="col-12">
            <button class="btn btn-primary" type="submit">Ingresar</button>
        </div>
    </form>

    <a class="margin" href="/api/sessions/githubcallback">Entrar con Github</a>
    <a class="margin" href="api/sessions/resetPassword">Reestablecer contraseña</a>
    <div>
        <a class="margin" href="/">Volver</a>
    </div>
</div>
    